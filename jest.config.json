{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "moduleNameMapper": {
    "^@shared/(.*)$": "<rootDir>/shared/$1",
    "^@domain/(.*)$": "<rootDir>/domain/$1",
    "^@config/(.*)$": "<rootDir>/../src/config/$1"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
